<Application x:Class="kenzauros.RHarbor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:properties="clr-namespace:kenzauros.RHarbor.Properties"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <xctk:InverseBoolConverter x:Key="InverseBoolConverter"/>
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                    <properties:Resources x:Key="resources" />
                </ResourceDictionary>
                <ResourceDictionary Source="./Styles/DataGridStyles.xaml"/>
                <ResourceDictionary Source="./Styles/Misc.xaml"/>
                <ResourceDictionary Source="./Styles/SemanticUIBrushes.xaml"/>
                <ResourceDictionary Source="./Styles/SemanticUIStyles.xaml"/>
                <ResourceDictionary Source="./Styles/PropertyGridStyles.xaml"/>
                <ResourceDictionary Source="./Styles/ContextMenuStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
